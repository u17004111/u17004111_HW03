@model IEnumerable<_272_hw03_final_rev2.Models.FileModel>

<h2>Files</h2>
<h5>Uploaded documents of any filetype are displayed here.</h5>
<p>The directory is <a href="@Server.MapPath("~/Media/Documents/")">@Server.MapPath("~/Media/Documents/")</a></p>

<form method="post">
    <table class="table table-hover">
        <thead class="table thead-dark">
            <tr>
                <th>File name</th>
                <th></th>
                <th>Download option</th>
                <th>Delete option</th>
            </tr>
        </thead>
        @{
            if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td colspan="2">
                            @item.FileName
                        </td>
                        <td>
                            @Html.ActionLink("Download", "Download", "File", new { fileName = item.FileName }, new { @class = "btn btn-primary" })
                        </td>
                        <td>
                            @Html.ActionLink("Delete", "Delete", "File", new { fileName = item.FileName }, new { @class = "btn btn-secondary" })
                        </td>
                    </tr>
                }
            }
        }
    </table>
</form>
